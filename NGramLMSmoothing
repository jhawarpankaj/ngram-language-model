from NGramLMPart2 import NGramLMPart2
from ngram import *

class NGramLMSmoothing(NGramLMPart2):

    def __init__(self, n):
        super(NGramLMSmoothing, self).__init__(n)
        self.laplace = 0


if __name__ == "__main__":

    n = 3
    corpus = "../../../files/warpeace.txt"

    model = NGramLMSmoothing(n)
    masked_corpus = model.mask_rare(corpus)
    model.create_ngramlm(masked_corpus)  # vocabulary is built here

    text1 = list("* God has given it to me, let him who touches it beware!".split(" "))
    text2 = list("Where is the prince, my Dauphin?".split(" "))

    prob1 = text_prob(model, text1)
    prob2 = text_prob(model, text2)

    print(prob1)
    print(prob2)
